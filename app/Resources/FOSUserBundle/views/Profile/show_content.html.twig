{% extends 'user/layout.html.twig' %}


{% set title = "Perfil del usuario" %}
{% set preclass = "register" %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}" />
{% endblock %}


{% block content %}
<div class="col-md-12">

  <!-- Profile Image -->
  <div class="box box-primary">
    <div class="box-body box-profile">
      <img class="profile-user-img img-responsive img-circle" src="{{asset('avatars/' ~ user.avatar)}}" alt="User profile picture">

      <h3 class="profile-username text-center">{{user.username}}</h3>

      <p class="text-muted text-center">{{user.lastname}}, {{user.name}}</p>

      <ul class="list-group list-group-unbordered">
        <li class="list-group-item">
          <b>Email</b> <a class="pull-right">{{user.email}}</a>
        </li>
        <li class="list-group-item">
          <b>Sexo</b> <a class="pull-right">
          {% if user.gender == 'Female' %}
          	Mujer
          {% else %}
          	Hombre
          {% endif %}
          </a>
        </li>        
        <li class="list-group-item">
          <b>Registrado</b> <a class="pull-right">{{user.registeredAt|date("d/m/Y")}}</a>
        </li>
        <li class="list-group-item">
          <b>Ultimo acceso</b> <a class="pull-right">{{user.lastLogin|date("d/m/Y")}}</a>
        </li>
        <li class="list-group-item">
          <b>Comentarios</b> <a class="pull-right">13,287</a>
        </li>
      </ul>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>

{% endblock %}
