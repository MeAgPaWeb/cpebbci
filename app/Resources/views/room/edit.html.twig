{% extends 'default.html.twig' %}
{% form_theme edit_form 'form/fields.html.twig' %}
{% set page =
    {
        "title": "Sala",
        "subtitle": "Editar",
    }
%}
{% block javascript %}
{{parent()}}
<script>
$('input.btn').click(function(){
  $('#load').show();
  $('#route').val($(this).attr('data'));
});
</script>
{% endblock javascript %}
{% block breadcrumb %}
    <li><a href="#"> Sala</a></li>
    <li>Crear </li>
    <li class="active">Editando sala</li>
{% endblock %}

{% block content %}
  <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Editanto sala</h3>
      </div>
      <div class="box-body">
          {{ form_start(edit_form, { 'attr': {'enctype': 'multipart/form-data'} }) }}
            <div class="row">
              <div class="col-md-4">
                  <div class="form-group ">
                    {{ form_label(edit_form.use) }}
                    {{ form_widget(edit_form.use) }}
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  {{ form_label(edit_form.conditioning) }}
                  {{ form_widget(edit_form.conditioning) }}
                </div>
              </div>
              <div class="col-md-4">
                  <div class="form-group ">
                    {{ form_label(edit_form.exposedFaces) }}
                    {{ form_widget(edit_form.exposedFaces) }}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  {{ form_label(edit_form.width) }}
                  {{ form_widget(edit_form.width) }}
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  {{ form_label(edit_form.length) }}
                  {{ form_widget(edit_form.length) }}
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  {{ form_label(edit_form.high) }}
                  {{ form_widget(edit_form.high) }}
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(edit_form.roofComposition) }}
                  {{ form_widget(edit_form.roofComposition) }}
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(edit_form.floorComposition) }}
                  {{ form_widget(edit_form.floorComposition) }}
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(edit_form.wallComposition) }}
                  {{ form_widget(edit_form.wallComposition) }}
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  {{ form_label(edit_form.windowComposition) }}
                  {{ form_widget(edit_form.windowComposition) }}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(edit_form.glazedSurface) }}
                  {{ form_widget(edit_form.glazedSurface) }}
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group" style="overflow:hidden;">
                  <label for="exampleInputFile">Registro del DataLogger</label>
                  <input id="exampleInputFile" type="file" name="upload">
                  <p class="help-block">Seleccione el archivo CSV ("#";"Date";"Time, GMT-03:00";"Temp, °C";"RH, %";"DewPt, °C")</p>
                </div>
              </div>
            </div>
            <div class="box-footer">
                <input  data="room_new" class="btn btn-primary" type="submit" value="Agregar Otra Sala" />
                <input  data="homepage" class="btn btn-success" type="submit" value="Finalizar Carga" />
                <input  id="route" name="route" type="hidden" value="" />
            </div>
        {{ form_end(edit_form) }}
      </div>
      <div class="overlay" id="load" style="display:none;">
        <i class="fa fa-refresh fa-spin"></i>
        <span class="pull-right text-muted">cargando datos...</span>
      </div>
  </div>

{% endblock %}
