        "title": "Principal",
        "subtitle": "Portada",
    }
%}

{% block breadcrumb %}
    <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
    <li class="active">Portada</li>
{% endblock %}
            
{% block content %}
<div class="row">
