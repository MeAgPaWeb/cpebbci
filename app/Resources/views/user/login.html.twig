{% extends 'user/layout.html.twig' %}

{% set page =
    {
        "title": "Ingreso a la cuenta",
        "preclass": "login"
    }
%}

{% block linkStylesheet %}
    {{ parent() }}

    <link href="//cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/flat/blue.css" rel="stylesheet" />

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js"></script>
{% endblock %}


{% block content %}
    <form action="{{ path("fos_user_security_check") }}" method="post" >
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Nombre de usuario" name="_username" required="required" />
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Contraseña" name="_password" required="required" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input id="remember_me" name="_remember_me" type="checkbox"> Recordame
                    </label>
                </div>
            </div>

            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat" name="_submit">Ingresar</button>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-e  xclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Usuario y/o contraseña incorrectos
                    </div>
                {% endif %}
            </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    </form>

    <div class="row">
        <div class="col-xs-6">
            <a href="{{ path('fos_user_resetting_request') }}">Olvidé mi contraseña</a><br>
        </div>
        <div class="col-xs-6 text-right">
            <a href="{{ path('fos_user_registration_register') }}" >No tengo cuenta</a><br>
        </div>
    </div>
{% endblock %}
