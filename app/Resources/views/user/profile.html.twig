{% extends 'default.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}

{% if profile %}
    {% form_theme pass_form 'form/fields.html.twig' %}
    {% set page =
        {
            "title":    "Perfil",
            "subtitle": ""
        }
    %}
{% else %}
    {% set page =
        {
            "title":    "Usuarios",
            "subtitle": "Ver detalle"
        }
    %}
    {% set i = 0 %}
{% endif %}

{% set stylesheets = [
                      'lib/bootstrap-datatables/dataTables.bootstrap.css',
                      'css/DataTable.css',
                      'css/User.css'
                     ] %}

{% set javascripts = [
                      'lib/bootstrap-datatables/jquery.dataTables.js',
                      'lib/bootstrap-datatables/dataTables.bootstrap.min.js',
                      'js/DataTable.ready.js',
                      'js/User.js',
                      'js/User.ready.js'
                     ] %}

{% block javascript %}
    {{ parent() }}
    <script>
        var original_avatar = "{{ avatar_asset(user.avatar) }}";
        var activeTab = "{{ active_tab }}";
        var profilePage = true;
    </script>
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
    {% if profile %}    
        <li class="active">{{ page.title }}</li>
    {% else %}
	    {% if visitors %}
            <li><a href="{{ path('user_visitors') }}"> {{ page.title }}</a></li>    
        {% else %}
            <li><a href="{{ path('user_index') }}"> {{ page.title }}</a></li>    
        {% endif %}
            <li class="active">{{ page.subtitle }}</li>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <div id="profile-avatar" class="user-avatar-preview profile-avatar" style="background-image: url({{ avatar_asset(user.getAvatar()) }})">
                    </div>
		            <h3 class="profile-username text-center">{{ user.name }} {{ user.lastname }}</h3>
                    <p class="text-muted text-center">{{ user.roles | role }}</p>
                    <strong><i class="glyphicon glyphicon-user margin-r-5"></i> Datos personales</strong>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nombre</th>
                                    <td>{{ user.name }}</td>
                                </tr>
                                <tr>
                                    <th>Apellido</th>
                                    <td>{{ user.lastname }}</td>
                                </tr>
                                <tr>
                                    <th>Correo electrónico</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Sexo</th>
                                    <td>{{ user.gender | gender }}</td>         
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <strong><i class="glyphicon glyphicon-lock margin-r-5"></i> Datos de la cuenta</strong>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nombre de usuario</th>
                                    <td>
                                        {{ user.username }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    <td>
                                        {{ user.roles | role }}
                                    </td>
                                </tr>
                                {% if not profile %}
                                <tr>
                                    <th>Estado</th>
                                    <td>{% if user.enabled %}Habilitada{% else %}Deshabilitada{% endif %}</td>
                                </tr>
                                {% endif %}
                                <tr>
                                    <th>Registrado</th>
                                    <td>{{ user.registeredAt | locale_date("d/m/Y H:i") }}</td>
                                </tr>
                                <tr>
                                    <th>Ultimo ingreso</th>
                                    <td>{% if user.lastLogin.timestamp is defined %}{{ user.lastLogin.timestamp | locale_date("d/m/Y H:i") }}{% else %}Nunca{% endif %}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div id="profile-tabs" class="nav-tabs-custom">
                
                <ul class="nav nav-tabs">
                
                   {% if security_granted(user, ['comment', 'new', 'comment'] ) %}
                        <li {% if active_tab == "comments" %}class="active"{% endif %}><a aria-expanded="false" href="#comments" data-toggle="tab">Comentarios</a></li>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'publication'] ) %}
                    <li {% if active_tab == "publications" %}class="active"{% endif %}><a aria-expanded="false" href="#publications" data-toggle="tab">Publicaciones</a></li>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'edition'] ) %}
                    <li {% if active_tab == "editions" %}class="active"{% endif %}><a aria-expanded="false" href="#editions" data-toggle="tab">Ediciones</a></li>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'revision'] ) %}
                    <li {% if active_tab == "revisions" %}class="active"{% endif %}><a aria-expanded="false" href="#revisions" data-toggle="tab">Revisiones</a></li>
                    {% endif %}
                    
                    <li {% if active_tab == "personal" %}class="active"{% endif %}><a aria-expanded="false" href="#personal" data-toggle="tab">Datos personales</a></li>
                   
                    <li {% if active_tab == "account" %}class="active"{% endif %}><a aria-expanded="false" href="#account" data-toggle="tab">Datos de la cuenta</a></li>
                </ul>
                
                <div class="tab-content">
                    {% if security_granted(user, ['comment', 'new', 'comment'] ) %}
                    <div class="tab-pane {% if active_tab == "comments" %}active{% endif %}" id="comments">
                        <table class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Comentario</th>
                                    <th>Contenido</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for comment in user.comments %}
                                    <tr>
                                        <td>{{ comment.commentText  | slice(0, 30) ~ '...' }}</td>
                                        <td>{{ comment.content }}</td>
                                        <td>{{ comment.datetime.timestamp | locale_date("d/m/Y h:i") }}</td>
                                        <td>
                                            <a href="{{ path('comment_show', { 'id': comment.id }) }}" title="Ver detalle"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>&nbsp;&nbsp;
                                            <a href="{{ path('comment_edit', { 'id': comment.id }) }}" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Comentario</th>
                                    <th>Contenido</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'publication'] ) %}
                    <div class="tab-pane {% if active_tab == "publications" %}active{% endif %}" id="publications">
                        <table class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for content in user.publications %}
                                    <tr>
                                        <td>{{ content.title  | slice(0, 30) ~ '...' }}</td>
                                        <td>{{ content.redactionDatetime | locale_date("d/m/Y h:i") }}</td>
                                        <td>
                                            <a href="{{ path('content_show', { 'id': content.id }) }}" title="Ver detalle"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>&nbsp;&nbsp;
                                            <a href="{{ path('content_edit', { 'id': content.id }) }}" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'edition'] ) %}
                    <div class="tab-pane {% if active_tab == "editions" %}active{% endif %}" id="editions">
                        <table class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for content in user.editions %}
                                    <tr>
                                        <td>{{ content.title  | slice(0, 30) ~ '...' }}</td>
                                        <td>{{ content.redactionDatetime | locale_date("d/m/Y h:i") }}</td>
                                        <td>
                                            <a href="{{ path('contentnote_show', { 'id': content.id }) }}" title="Ver detalle"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>&nbsp;&nbsp;
                                            <a href="{{ path('contentnote_edit', { 'id': content.id }) }}" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    {% endif %}
                    
                    {% if security_granted(user, ['content_type', 'note', 'new', 'revision'] ) %}
                    <div class="tab-pane {% if active_tab == "revisions" %}active{% endif %}" id="revisions">
                        <table class="table table-bordered table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for content in user.revisions %}
                                    <tr>
                                        <td>{{ content.title  | slice(0, 30) ~ '...' }}</td>
                                        <td>{{ content.redactionDatetime | locale_date("d/m/Y h:i") }}</td>
                                        <td>
                                            <a href="{{ path('contentnote_show', { 'id': content.id }) }}" title="Ver detalle"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>&nbsp;&nbsp;
                                            <a href="{{ path('contentnote_edit', { 'id': content.id }) }}" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    {% endif %}                    
                    
                    <div class="tab-pane {% if active_tab == "personal" %}active{% endif %}" id="personal">
                        {% if profile %}
                            {{ form_start(form, { 'action': path('backend_profile_show') }) }}
                        {% else %}
                            {{ form_start(form, { 'action': path('user_show', { 'id': user.id, 'visitors': visitors}) }) }}
                        {% endif %}
                        <div class="row">
			                <div class="col-md-9 col-xs-9">
		                        <div class="form-group{% if form.name.vars.errors|length > 0 %} has-error{% endif %}">
                                    {{ form_label(form.name, "Nombre") }}
                                    {{ form_widget(form.name, {"attr": {"placeholder": "Ingrese el nombre"}}) }}
                                    <div class="help-block with-errors">
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="form-group{% if form.lastname.vars.errors|length > 0 %} has-error{% endif %}">
                                    {{ form_label(form.lastname, "Apellido") }}
                                    {{ form_widget(form.lastname, {"attr": {"placeholder": "Ingrese el apellido"}}) }}
                                    <div class="help-block with-errors">
                                        {{ form_errors(form.lastname) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-xs-3">
                                <div class="form-group user_avatar_form_group{% if form.avatar.vars.errors|length > 0 %} has-error{% endif %}">
                                    {{ form_label(form.lastname, "Imágen avatar") }}
                                    <div class="user-avatar-preview" id="user_avatar_preview">
                                        <div id="avatar_edit" class="avatar-edit">
                                            <span id="avatar_edit_icon" class="glyphicon glyphicon-camera"></span>
                                        </div>
                                    </div>                      
                                    {{ form_widget(form.avatar, {'id': 'form_user_avatar'} ) }}                    
                                    <div class="help-block with-errors">
                                        {{ form_errors(form.avatar) }}
                                        {% if error %}
                                            {{ error }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <div class="form-group{% if form.email.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_label(form.email, "Correo electrónico", {"label_attr": {"class": "control-label"}}) }}
                            {{ form_widget(form.email, {"type":"text", "attr": {"placeholder": "Ingrese un nuevo correo electrónico"}}) }}
                            <div class="help-block with-errors">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        
                        <div class="form-group{% if form.gender.vars.errors|length > 0 %} has-error{% endif %}">
                            <label for="form_user_gender">Sexo</label>                                                  
                            {{ form_widget(form.gender, {'id': 'form_user_gender'}) }}
                            <div class="help-block with-errors">
                                {{ form_errors(form.gender) }}
                            </div>
                        </div>         
                        
                        {% if profile %}
                        <hr>
                        <div class="form-group{% if form.current_password.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_label(form.current_password, "Confirmar contraseña", {"label_attr": {"class": "control-label"}}) }}
                            {{ form_widget(form.current_password, {"type":"password", "attr": {"placeholder": "Ingrese su contraseña actual"}}) }}
                            <div class="help-block with-errors">
                                {{ form_errors(form.current_password) }}
                            </div>
                        </div>
                        {% else %}
                            <input type="hidden" name="visitors" value="{{ visitors }}" />
                            {% set i = i +1 %}{{ form_widget(form.roles, {"id": "form_hidden_"~i, attr: {"class":"hidden"}}) }}
                        {% endif %}
                        
                        {{ form_widget(form.username, {"attr": {"class":"hidden"}}) }}
                        <input type="hidden" id="customAvatar" name="custom_avatar" />
                        <input type="hidden" name="personal" value="true" />
                       
                        <button type="reset" id="personal_reset" class="btn btn-default" value="Reset"> Restablecer</button>
                        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>                             
                        {{ form_end(form) }}
                    </div>
                    
                    
                    <div class="tab-pane {% if active_tab == "account" %}active{% endif %}" id="account">
                        {% if profile %}    
                            {{ form_start(pass_form, { 'action': path('backend_profile_show') }) }}
                            
                            <div class="form-group{% if pass_form.plainPassword["first"].vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_label(pass_form.plainPassword["first"], null, {"label_attr": {"class": "control-label"}}) }}
                                    {{ form_widget(pass_form.plainPassword["first"], {"type":"password", "attr": {"placeholder": "Ingrese su nueva contraseña"}}) }}
                                    <div class="help-block with-errors">
                                        {{ form_errors(pass_form.plainPassword["first"]) }}
                                    </div>
                            </div>
                            
                            <div class="form-group{% if pass_form.plainPassword["second"].vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_label(pass_form.plainPassword["second"], null, {"label_attr": {"class": "control-label"}}) }}
                                    {{ form_widget(pass_form.plainPassword["second"], {"type":"password", "attr": {"placeholder": "Repita su nueva contraseña"}}) }}
                                    <div class="help-block with-errors">
                                        {{ form_errors(pass_form.plainPassword["second"]) }}
                                    </div>
                            </div>
                            
                            <hr>
                            
                            <div class="form-group{% if pass_form.current_password.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_label(pass_form.current_password, "Confirmar contraseña", {"label_attr": {"class": "control-label"}}) }}
                                {{ form_widget(pass_form.current_password, {"type":"password", "attr": {"placeholder": "Ingrese su contraseña actual"}}) }}
                                <div class="help-block with-errors">
                                    {{ form_errors(pass_form.current_password) }}
                                </div>
                            </div>
                            
                            <input type="hidden" name="account" value="true" />
                            <button type="reset" class="btn btn-default" value="Reset"> Restablecer</button>
                            <button type="submit" class="btn btn-success pull-right"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                            
                            {{ form_end(pass_form) }}
                        {% else %}
                            {{ form_start(account_form, { 'action': path('user_show', { 'id': user.id,'visitors': visitors}) }) }}
              
                            {% set i = i + 1 %}{{ form_widget(account_form.name, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_widget(account_form.lastname, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_widget(account_form.email, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_errors(account_form.gender, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_widget(account_form.username, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_widget(account_form.gender, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}
                            {% set i = i + 1 %}{{ form_widget(account_form.avatar, {"id": "form_hidden_"~i, "attr": {"class":"hidden"}}) }}

                            {% for choice in form.roles.vars.choices %}
                                {% set service_entity = "hola" %}
                            {% endfor %}

                            <div class="form-group{% if account_form.roles|length > 0 %} has-error{% endif %}">
                                {{ form_label(account_form.roles, null, {"label_attr": {"class": "control-label"}}) }}
                                {{ form_widget(account_form.roles) }}
                                <div class="help-block with-errors">
                                    {{ form_errors(account_form.roles) }}
                                </div>
                            </div>
              
                            <input type="hidden" name="account" value="true" />
                            <input type="hidden" name="visitors" value="{{ visitors }}" />
                            {% set i = i + 1 %}{{ form_widget(account_form._token, {"id": "form_hidden_"~i} )}} 
                            
                            <button type="reset" id="account_reset" class="btn btn-default" value="Reset"> Restablecer</button>
                            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                                                        
                            {{ form_end(account_form) }}
                            {% if user.id != app.user.id %}
                                {{ form_start(delete_form) }}
                                {% if user.locked %}
				                    <button id="lock-submit" type="submit" class="btn btn-danger pull-right"><span class="glyphicon glyphicon-lock"></span> Habilitar</button>   
                                {% else %}
                              		<button id="lock-submit" type="submit" class="btn btn-warning pull-right"><span class="glyphicon glyphicon-lock"></span> Deshabilitar</button>
                                {% endif %}
                            {% endif %}
                            <input type="hidden" name="visitors" value="{{ visitors }}" />      
                            {{ form_end(delete_form) }}

                        {% endif %}
                    </div>                    
                </div>
            </div>            
        </div>
    </div>
    {% if not profile %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    {% if visitors %}
                        {% set user_path = path('user_visitors') %}
                    {% else %}
                        {% set user_path = path('user_index') %}
                    {% endif %}
                    <a class="btn btn-default" href="{{ user_path }}"><span class="glyphicon glyphicon-chevron-left"></span> Volver</a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
