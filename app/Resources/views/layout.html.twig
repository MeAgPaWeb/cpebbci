<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <title>{{ system.title }} | {{ page.title }}</title>
        {% block stylesheet %}
            {{ macro.stylesheets(stylesheets) }}
        {% endblock stylesheet %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            <header class="main-header">
                <a href="{{ path('homepage') }}" class="logo">
                    {% block logo %}{% endblock %}
                </a>
                <nav class="navbar navbar-static-top" >
                    <!-- Sidebar toggle button-->
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Cambiar navegación</span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            {% block navbarCustomMenu %}{% endblock %}
                        </ul>
                    </div>
                </nav>
            </header>

            <aside class="main-sidebar">
                <div class="sidebar">
                    {% block mainSidebar %}{% endblock %}
                </div>
            </aside>

            <div class="content-wrapper">
                {% block contentWrapper %}{% endblock %}
            </div>

            <footer class="main-footer">
                <div class="pull-right hidden-xs">
                    <b>Version</b> {{ system.version }}
                </div>
                {{ system.footer | raw }}
            </footer>


            <aside class="control-sidebar control-sidebar-dark">
                {% block controlSidebar %}{% endblock %}
            </aside>
            <div class="control-sidebar-bg"></div>
        </div>

        {% block javascript %}
            {{ macro.javascripts(javascripts) }}
        {% endblock javascript %}
    </body>
</html>
